/* pages/stockCollect/stockCollect.wxss */

.title{
    height: 32rpx;
    line-height: 32rpx;
    font-size: 32rpx;
    font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(86,108,146,1);
width: 200rpx;
position: relative;
margin: 40rpx 48rpx;
padding-left: 16rpx;
}

.title::before{
    content: '';
    position: absolute;
    left: 0;
    width:6rpx;
height:26rpx;
top:5rpx;
background:rgba(46,101,253,1);
box-shadow:0px 0px 4px 0px rgba(160,170,199,0.13);
border-radius:2px;
}
.circle{
    width: 258rpx;
    height: 258rpx;
    box-sizing: border-box;
    border: 32rpx solid #2E65FD;
    overflow: hidden;
    border-radius: 129rpx;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size:36rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(86,108,146,1);
margin-bottom: 40rpx;
}