/* pages/materialInventoryCollect/materialInventoryCollect.wxss */

#multi-scatter-dom {
    width: 100%;  
    height: 700rpx;  
}
.month_select{
    padding: 0 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 58rpx;
    align-items: center;
    margin: 34rpx 0;


}

.month_select text{
    font-size:24rpx;
    color:#1284EC;
}

.month_select .month{
    width: 560rpx;
    border:1px solid rgba(195,193,193,1);
border-radius:5px;
box-sizing: border-box;
position: relative;
text-align: center;
height: 58rpx;
line-height: 58rpx;
font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(51,51,51,1);
}

.tab_box{
/* margin-top: -60rpx; */
display:flex;
flex-direction: row;
justify-content: center;
align-items: center;
flex-wrap: wrap;
}


.tab_item{
    width:290rpx;
height:60rpx;
line-height: 60rpx;
border:1px solid rgba(0,92,211,1);
overflow: hidden;
box-sizing: border-box;
border-radius:10px;
font-size:28rpx;
font-family:PingFang-SC-Regular;
font-weight:bold;
color:rgba(73,155,255,1);
text-align: center;
margin-bottom: 30rpx;
}

.tab_item:nth-of-type(odd){
    margin-right: 20rpx;
  
}
