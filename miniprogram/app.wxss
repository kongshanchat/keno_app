.noData{
    width: 750rpx;
    height: 300rpx;
    flex-direction: column;
    margin-top:100rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    color: #adadad
}

.noData image{
    width: 180rpx;
    height: 144rpx;
    margin-bottom: 30rpx;
}